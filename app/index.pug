extends /_layouts/_main.pug

block precontent
  header.hero
    .hero-inner
      h1 You can change L.A. for the better
      p.type-featured.
        Can you design, write, or code? Are you an activist with an idea?
        You can help L.A. live up to its potential
        through Hack for LA. Everyone is welcome!
      form.hero-signup(action='#', method='post')
        label(for='hero-signup') Sign up to learn more
        input(type='email',
          name='email',
          placeholder='Email address')#hero-signup
        button(type='submit').btn.btn-primary Submit

block content
  section#hack-nights.content-section
    .section-inner.page-contain
      .section-body
        h2 Hack Nights
        p.
          At our weekly Hack Nights, we organize groups of volunteers to build
          technology addressing the LA region's biggest civic issues. Join an
          existing project team or pitch your own civic issue.
        p
          address.
            LaKretz Innovation Center#[br]
            Room 402#[br]
            525 S Hewitt St#[br]
            Los Angeles, CA 90013
        p
          a(href='http://hackforla-slack.herokuapp.com/') Join us on Slack
      aside.section-aside
        img(src='http://placehold.it/600x400')

  -
    var projects = [
      {
        title: 'Food Oasis',
        description: 'Everyone deserves access to healthy food. Help us make it easier for Angelenos to find the best places to buy or grow healthy food in their city.',
        links: {
          'Gitnhub': 'https://github.com/foodoasisla',
          'Site': 'https://foodoasis.la/',
        },
        status: 'beta',
        parter: 'LA Food Policy Council',
        needs: 'Java Developers, Designers, Writers',
        img: 'http://placehold.it/600x400',
        featured: true
      },
      {
        title: 'Work for LA',
        description: 'Applying for work should be simple—but the application process for the City of LA is confusing. We’re going to make it easier to follow.',
        links: {
          'Github': '',
          'Site': 'http://www.workfor.la/',
        },
        status: 'planning',
        needs: 'UX, Writers, Designers',
        img: 'http://placehold.it/600x400',
      },
      {
        title: 'Adopt-A-Civic Artwork',
        description: 'There are thousands of works of public art scattered around the city. There should be one place to see where they are and how they’re doing. We’re building it.',
        links: {
          'Github': 'https://github.com/hackforla/adopt-civic-art',
        },
        status: 'planning',
        needs: 'UX, Designers, Python',
        img: 'http://placehold.it/600x400',
      },
      {
        title: 'Curb Map',
        description: 'We’re going to build an iOS and Android app that will tell you where and when you can park in the city—all based on your location. Come drive with us.',
        links: {
          'Github': ''
        },
        status: 'planning',
        needs: 'Designers, Python',
        img: 'http://placehold.it/600x400',
      }
    ]

  section#projects.content-section
    .section-inner.page-contain
      .section-body-full
        h2 Current Projects
      ul.project-list.unstyled-list
        each item in projects
          li(class={featured: item.featured}).project-card
            .project-tmb
              img(src=item.img).project-tmb-img
            .project-body
              h3.project-title= item.title
              p.project-description= item.description
              p.project-needs Looking for: #{item.needs}
              ul.inline-list.project-links
                each link, key in item.links
                  li
                    a(href=link)= key
      .section-body-full
        p.project-pitch
          a(href='#') Have an idea? Submit your pitch

  section#impact.content-section
    .section-inner.page-contain
      .impact-stat
        .impact-large 4
        p Active projects
      .impact-stat
        .impact-large 45%
        p Women hackers
      .impact-stat
        .impact-large XX
        p Some stat here!

