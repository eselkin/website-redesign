  section#projects.content-section.projects
    .page-contain.projects-inner
      h2.project-header Current Projects
      ul.project-list.unstyled-list
        each item in projects
          li.project-card
            .project-card-inner
              .project-tmb
                img(src=item.img).project-tmb-img
              .project-body
                h4.project-title= item.title
                p.project-description= item.description
                if item.links
                  .project-links
                    strong Links:
                    - let i = 0;
                    each link, key in item.links
                      - i++;
                      |  #[a(href=link, target='_blank')= key]
                      if (Object.keys(item.links).length !== i)
                        | ,
                if item.partner
                  .project.partner
                    strong Partner:
                    if item.partnerLink
                      |  #[a(href=item.partnerLink, target='_blank')= item.partner]
                    else
                      |  #{item.partner}
                if item.needs
                  .project-needs
                    strong Looking for:
                    |  #{item.needs}
                if item.location
                  .project-location
                    strong Location:
                    |  #{item.location}
      p.project-pitch.
        Have an idea? #[a(href='#contact').js-smooth-scroll.btn.btn-primary Submit your pitch]

